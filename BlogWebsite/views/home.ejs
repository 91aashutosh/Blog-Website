<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <%- include("partials/header") -%>
    
    <h1>Home</h1>
    <p><%= homeContent %></p>

   <% blog.forEach(function(p){  %>
        <h2><%= p.title %></h2>
        <p style="display: inline;"><%= p.post.substring(0,100) %>....</p><a style="display: inline;" href="/post/<%= p.title %>">Read more</a>
   <% }); %>
    <br>
   <button name="compose" id="comp" class="pub-btn"><a href="/compose" class="a-btn">Compose</a></button>
    <%- include("partials/footer") -%>
</body>
</html>